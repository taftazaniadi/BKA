<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_row_table_gray"
        android:layout_marginHorizontal="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="001"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:textSize="12sp"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Selasa, 24-12-2021"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCustomer"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="wisnu"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="0864"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_row_table_gray"
            android:paddingStart="16dp"
            >
            <ImageButton
                android:id="@+id/btnSee"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/colorBlackText"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_table_see"/>
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/colorBlackText"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_table_edit"/>
            <ImageButton
                android:id="@+id/btnDel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/colorBlackText"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_table_del"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddress"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Jln."
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTransaction"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAction"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@drawable/shape_bg_row_table_gray"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorBlackText"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingStart="16dp"/>
    </LinearLayout>
</LinearLayout>